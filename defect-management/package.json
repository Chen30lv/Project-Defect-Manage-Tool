{
  "name": "defect-management",
  "displayName": "defect-management",
  "description": "a vscode extension for defect management",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "defect-management-sidebar",
          "title": "Defect manegement",
          "icon": "media/QueueList.svg"
        }
      ]
    },
    "views": {
      "defect-management-sidebar": [
        {
          "id": "DM-PackAnalysis",
          "name": "未被修改完的缺陷"
        },
        {
          "id": "DM-General",
          "name": "修改完成的缺陷"
        }
      ]
    },
    "webviews": [
      {
          "id": "myWebview",
          "name": "My Webview"
      }
    ],
    "commands": [
      {
        "command": "DM-PackAnalysis.submitChild",
        "title": "缺陷状态更新"
      },
      {
        "command": "DM-PackAnalysis.openChild",
        "title": "查看缺陷详细信息"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "DM-PackAnalysis.openChild",
          "when": "(view == DM-PackAnalysis||view == DM-General) && viewItem == scriptItem"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.83.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "ts-loader": "^9.4.4",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "@vscode/test-electron": "^2.3.4"
  }
}
