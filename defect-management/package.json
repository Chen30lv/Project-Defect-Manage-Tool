{
  "name": "defect-management",
  "displayName": "defect-management",
  "description": "a vscode extension for defect management",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "defect-management-sidebar",
          "title": "Defect manegement",
          "icon": "media/QueueList.svg"
        }
      ]
    },
    "views": {
      "defect-management-sidebar": [
        {
          "id": "DM-General",
          "name": "Todo"
        },
        {
          "id": "DM-PackAnalysis",
          "name": "Finish"
        },
        {
          "id": "DM-Count",
          "name": "Count"
        }
      ]
    },
    "webviews": [
      {
        "id": "myWebview",
        "name": "My Webview"
      }
    ],
    "commands": [
      {
        "command": "defect-management.showSidebar",
        "title": "Show Sidebar",
        "icon": "media/QueueList.svg"
      },
      {
        "command": "DM-General.list",
        "title": "list",
        "icon": "media/list.svg"
      },
      {
        "command": "DM-General.refresh",
        "title": "refresh",
        "icon": "media/refresh.svg"
      },
      {
        "command": "DM-PackAnalysis.list",
        "title": "list",
        "icon": "media/list.svg"
      },
      {
        "command": "DM-PackAnalysis.refresh",
        "title": "refresh",
        "icon": "media/refresh.svg"
      },
      {
        "command": "DM-Count.list",
        "title": "list",
        "icon": "media/list.svg"
      },
      {
        "command": "DM-Count.refresh",
        "title": "refresh",
        "icon": "media/refresh.svg"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "DM-General.list",
          "when": "view == DM-General",
          "group": "navigation"
        },
        {
          "command": "DM-General.refresh",
          "when": "view == DM-General",
          "group": "navigation"
        },
        {
          "command": "DM-PackAnalysis.list",
          "when": "view == DM-PackAnalysis",
          "group": "navigation"
        },
        {
          "command": "DM-PackAnalysis.refresh",
          "when": "view == DM-PackAnalysis",
          "group": "navigation"
        },
        {
          "command": "DM-Count.list",
          "when": "view == DM-Count",
          "group": "navigation"
        },
        {
          "command": "DM-Count.refresh",
          "when": "view == DM-Count",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.199",
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "html-webpack-plugin": "^5.5.3",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "lodash": "^4.17.21"
  }
}
